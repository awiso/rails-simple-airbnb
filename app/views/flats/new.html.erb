<div class="container">
  <h1>Post a New Flat</h1>
  <%= simple_form_for(@flat) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :price_per_night %>
    <%= f.input :number_of_guests %>
    <%= f.submit 'Submit', class: 'btn btn-success' %>
  <% end %>
</div>